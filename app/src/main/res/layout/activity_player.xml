<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        tools:context=".PlayerActivity">


    <Button
            android:text="@string/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/savePlayerButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deletePlayerButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/bottom_button_margin"
            android:onClick="savePlayer"/>

    <Button
            android:text="@string/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deletePlayerButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/savePlayerButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/bottom_button_margin"
            android:background="@color/delete_button_color"
            android:onClick="deletePlayer"
            />

    <TextView
            android:text="@string/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/editPersonName"
            app:layout_constraintEnd_toStartOf="@+id/editPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/editPersonName"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="@string/player_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/editPersonSurname"
            app:layout_constraintEnd_toStartOf="@+id/editPersonSurname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/editPersonSurname"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:text="@string/player_hcp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/editPersonHcp"
            app:layout_constraintEnd_toStartOf="@+id/editPersonHcp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/editPersonHcp"
            android:layout_marginEnd="16dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPersonName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/player_name"
            android:layout_marginTop="16dp"
            android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_GIVEN"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editPersonSurname"
            app:layout_constraintTop_toBottomOf="@+id/editPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/player_surname"
            android:layout_marginTop="16dp"
            android:autofillHints=".AUTOFILL_HINT_PERSON_NAME_FAMILY"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editPersonHcp"
            app:layout_constraintTop_toBottomOf="@+id/editPersonSurname"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/player_handicap"
            android:layout_marginTop="16dp"
            android:importantForAutofill="no"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
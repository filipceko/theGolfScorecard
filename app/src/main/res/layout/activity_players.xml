<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg"
        tools:context=".PlayersActivity">

    <TableLayout
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/playersTable"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/createPlayer"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/table_bg"
            android:clickable="false"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:paddingEnd="3dp"
            tools:ignore="RtlSymmetry"
            android:layout_marginStart="4dp">

        <TableRow
                android:layout_marginBottom="2dp"
                android:id="@+id/headerRow"
                tools:ignore="UselessParent">

            <TextView
                    android:text="@string/player_name"
                    android:id="@+id/arealHeader"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingStart="6dp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:background="@color/table_header_bg"
                    android:textColor="@color/table_header_text"

                    />

            <TextView
                    android:text="@string/player_surname"
                    android:id="@+id/nameHeader"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:background="@color/table_header_bg"
                    android:textColor="@color/table_header_text"
                    android:layout_marginStart="2dp"/>

            <TextView
                    android:text="@string/player_hcp"
                    android:id="@+id/countryHeader"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:background="@color/table_header_bg"
                    android:textColor="@color/table_header_text"
                    android:layout_marginStart="2dp"/>
        </TableRow>

        <TableRow
                android:background="#FFFFFF">

            <TextView
                    android:text="Jana"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="textStart"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:textColor="@color/table_value_text"
                    android:layout_marginStart="2dp"
                    />

            <TextView
                    android:text="ZimanovÃ¡"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="textStart"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:textColor="@color/table_value_text"
                    android:layout_marginStart="2dp"/>

            <TextView
                    android:text="55,8"
                    android:textSize="@dimen/table_header_size"
                    android:textAlignment="textStart"
                    android:paddingStart="4sp"
                    android:paddingEnd="4sp"
                    android:paddingLeft="4sp"
                    android:paddingRight="4sp"
                    android:paddingTop="4sp"
                    android:paddingBottom="4sp"
                    android:padding="4sp"
                    android:textColor="@color/table_value_text"
                    android:layout_marginStart="2dp"/>
        </TableRow>
    </TableLayout>

    <Button
            android:text="@string/new_player_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createPlayer"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/bottom_button_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="createPlayer"/>
</androidx.constraintlayout.widget.ConstraintLayout>